# Server
PORT=3000
NODE_ENV=production

# Google Drive Service Account (required for knowledge base)
# Option A: Path to JSON key file (local dev)
GOOGLE_SERVICE_ACCOUNT_PATH=data/service-account.json
# Option B: Full JSON string (Railway / cloud deploy)
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}
# Domain-wide delegation: impersonate a Workspace user so files are owned by
# them (uses their 20TB quota instead of the service account's 15GB).
# Requires domain-wide delegation enabled in Google Admin Console.
# GOOGLE_IMPERSONATE_EMAIL=andrew@aimarketingteam.com

# ── Google OAuth (dashboard login) ──
# If not set, dashboard has no login (open access — fine for local dev)
# GOOGLE_OAUTH_CLIENT_ID=xxx.apps.googleusercontent.com
# GOOGLE_OAUTH_CLIENT_SECRET=GOCSPX-xxx
# ALLOWED_EMAILS=andrew@aimarketingteam.com,jane@aimarketingteam.com
# SESSION_SECRET=random-32-char-string-here
# BASE_URL=https://teamdashboard.aimarketingteam.com

# ── Discord Bot ──
# If not set, bot doesn't start — server works as before
# DISCORD_BOT_TOKEN=your-bot-token-from-discord-developer-portal
# DISCORD_CHANNEL_ID=123456789012345678
# ANTHROPIC_API_KEY=sk-ant-...

# Optional: Add API keys for your workflows
# OPENAI_API_KEY=sk-...
# GOOGLE_ADS_API_KEY=...
# META_ADS_ACCESS_TOKEN=...
# GHL_API_KEY=...
# SEMRUSH_API_KEY=...
